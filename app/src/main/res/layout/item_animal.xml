<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAnimal"
        android:layout_width="100dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    
    <TextView
        android:id="@+id/UzbName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivAnimal"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Arislan"
        android:layout_marginTop="@dimen/margin_standart"
        android:textColor="#000"
        android:textSize="16sp"
        />

      <TextView
        android:id="@+id/RusName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/ivAnimal"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/UzbName"
        android:text="Arislan"
        android:textColor="#000"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/EngName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/ivAnimal"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/RusName"
        android:text="Arislan"
        android:textColor="#000"
        android:textSize="12sp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>